@model mvcproject.Models.User;
@{
    ViewBag.Title = "Register";
}

<section class="vh-100 gradient-custom" style="margin-top:-50px;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4 pb-5">

                            <form method="post" action="~/Home/Register/">
                                @Html.AntiForgeryToken()


                                <h2 class="fw-bold mb-2 text-uppercase">Create a new account !</h2>

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="form-outline form-white mb-4">
                                    @Html.TextBoxFor(m => m.name, new { @class = "form-control form-control-lg" })
                                    @Html.LabelFor(m => m.name, new { @class = "form-label" })
                                    <br>
                                    @Html.ValidationMessageFor(m => m.name, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-outline form-white mb-4">
                                    @Html.TextBoxFor(m => m.surname, new { @class = "form-control form-control-lg" })
                                    @Html.LabelFor(m => m.surname, new { @class = "form-label" })
                                    <br>
                                    @Html.ValidationMessageFor(m => m.surname, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-outline form-white mb-4">
                                    @Html.TextBoxFor(m => m.phone_number, new { @class = "form-control form-control-lg" })
                                    @Html.LabelFor(m => m.phone_number, new { @class = "form-label" })
                                    <br>
                                    @Html.ValidationMessageFor(m => m.phone_number, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-outline form-white mb-4">
                                    @Html.TextBoxFor(m => m.email, new { @class = "form-control form-control-lg" })
                                    @Html.LabelFor(m => m.email, new { @class = "form-label" })
                                    <br>
                                    @Html.ValidationMessageFor(m => m.email, "", new { @class = "text-danger" })
                                </div>


                                <div class="form-outline form-white mb-4">
                                    @Html.TextBoxFor(m => m.age, new { @class = "form-control form-control-lg" })
                                    @Html.LabelFor(m => m.age, new { @class = "form-label" })
                                    <br>
                                    @Html.ValidationMessageFor(m => m.age, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-outline form-white mb-4">
                                    @Html.TextBoxFor(m => m.city, new { @class = "form-control form-control-lg" })
                                    @Html.LabelFor(m => m.city, new { @class = "form-label" })
                                    <br>
                                    @Html.ValidationMessageFor(m => m.city, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-outline form-white mb-4">
                                    @Html.TextBoxFor(m => m.country, new { @class = "form-control form-control-lg" })
                                    @Html.LabelFor(m => m.country, new { @class = "form-label" })
                                    <br>
                                    @Html.ValidationMessageFor(m => m.country, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-outline form-white mb-4">
                                    @Html.TextBoxFor(m => m.street, new { @class = "form-control form-control-lg" })
                                    @Html.LabelFor(m => m.street, new { @class = "form-label" })
                                    <br>
                                    @Html.ValidationMessageFor(m => m.street, "", new { @class = "text-danger" })
                                </div>



                                <div class="form-outline form-white mb-4">
                                    @Html.PasswordFor(m => m.password, new { @class = "form-control form-control-lg" })
                                    @Html.LabelFor(m => m.password, new { @class = "form-label" })
                                    <br>
                                    @Html.ValidationMessageFor(m => m.password, "", new { @class = "text-danger" })
                                </div>


                                <button class="btn btn-outline-light btn-lg px-5" type="submit">Register</button>
                            </form>
                        </div>

                        

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
