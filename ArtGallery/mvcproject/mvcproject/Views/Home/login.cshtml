<section class="vh-100 gradient-custom" style="margin-top:-50px;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4 pb-5">

                            <form method="post" action="~/Home/login/">
                                @Html.AntiForgeryToken()


                                <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                                <p class="text-white-50 mb-5">Please enter your login and password!</p>
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="form-outline form-white mb-4">
                                    @Html.TextBoxFor(m => m.email, new { @class = "form-control form-control-lg" })
                                    @Html.LabelFor(m => m.email, new { @class = "form-label" })
                                    @Html.ValidationMessageFor(m => m.email, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-outline form-white mb-4">
                                    @Html.PasswordFor(m => m.password, new { @class = "form-control form-control-lg" })
                                    @Html.LabelFor(m => m.password, new { @class = "form-label" })
                                </div>


                                <button class="btn btn-outline-light btn-lg px-5" type="submit">Login</button>
                            </form>
                        </div>

                        <div>
                            <p class="mb-0">Don't have an account? <a href="~/Home/Register/" class="text-white-50 fw-bold">Register</a></p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>